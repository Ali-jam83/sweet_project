<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="310dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/img_cake"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_margin="15dp"
            android:contentDescription="@string/cakes"
            android:scaleType="fitXY"
            android:src="@drawable/test"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView29"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/img_off"
            android:translationX="25dp"
            android:translationY="5dp"
            app:layout_constraintEnd_toEndOf="@+id/img_cake"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans_fa_name_bold"
            android:text="25%"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:translationX="25dp"
            android:translationY="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView29"
            app:layout_constraintEnd_toEndOf="@+id/imageView29"
            app:layout_constraintStart_toStartOf="@+id/imageView29"
            app:layout_constraintTop_toTopOf="@+id/imageView29" />


        <TextView
            android:id="@+id/name_cake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sans_fa_name_bold"
            android:text="@string/cakes"
            android:textColor="@color/black"
            android:textSize="23sp"
            app:layout_constraintEnd_toEndOf="@+id/img_cake"
            app:layout_constraintStart_toStartOf="@+id/img_cake"
            app:layout_constraintTop_toBottomOf="@+id/img_cake" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sans_fa_name_regular"
            android:text="@string/cakes"
            android:textColor="@color/black"
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="@+id/name_cake"
            app:layout_constraintStart_toStartOf="@+id/name_cake"
            app:layout_constraintTop_toBottomOf="@+id/name_cake" />


        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans_fa_name_regular"
            android:text="23233"
            android:textColor="@color/gray_main"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_discount"
            app:layout_constraintStart_toStartOf="@+id/txt_discount"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />


        <ImageView

            android:id="@+id/imageView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="35dp"

            android:contentDescription="@string/cakes"
            android:src="@drawable/ic_shopping_recycler"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/sans_fa_name_regular"
            android:text="تومان"
            android:textColor="@color/black"
            android:textSize="21sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView28"
            app:layout_constraintStart_toEndOf="@+id/imageView28"
            app:layout_constraintTop_toTopOf="@+id/imageView28" />

        <TextView
            android:id="@+id/txt_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/sans_fa_name_regular"
            android:text="23233"
            android:textColor="@color/black"

            android:textSize="23sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>